---
import "../styles/global.css";
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const {
  title = "Numericano — practical unit conversions",
  description = "Practical unit conversions with explicit assumptions. Cooking volume ↔ weight using typical ingredient densities.",
  canonical,
} = Astro.props;

const siteUrl = "https://numericano.com";
const canonicalUrl = canonical ?? (siteUrl + Astro.url.pathname);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <link rel="canonical" href={canonicalUrl} />

    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />

    <!-- Basic performance hints -->
    <meta name="color-scheme" content="light" />
  </head>

  <body class="min-h-screen bg-white text-slate-900 antialiased">
    <a
      href="#content"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-lg focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:shadow"
    >
      Skip to content
    </a>

    <header class="border-b">
      <div class="mx-auto max-w-5xl px-4 py-4">
        <div class="flex items-center justify-between gap-4">
          <a href="/" class="font-semibold tracking-tight hover:underline">
            Numericano
          </a>

          <nav class="flex items-center gap-4 text-sm text-slate-700">
            <a class="hover:text-slate-900 hover:underline" href="/cooking/">Cooking</a>
            <a class="hover:text-slate-900 hover:underline" href="/volume-weight/">Volume ↔ Weight</a>
          </nav>
        </div>
      </div>
    </header>

    <main id="content" class="mx-auto max-w-5xl px-4 py-10">
      <article class="prose prose-slate max-w-none prose-a:text-blue-700 prose-a:no-underline hover:prose-a:underline prose-headings:tracking-tight">
        <slot />
      </article>
    </main>

    <footer class="border-t">
      <div class="mx-auto max-w-5xl px-4 py-6 text-sm text-slate-600">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <div>
            © {new Date().getFullYear()} Numericano. Built for clarity: conversions with stated assumptions.
          </div>
          <div class="flex gap-4">
            <a class="hover:underline" href="/about/">About</a>
            <a class="hover:underline" href="/ingredients/sugar/">Ingredients</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
