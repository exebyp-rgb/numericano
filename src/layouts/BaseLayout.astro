---
import "../styles/global.css";
import Header from "../components/Header.astro";

const { title = "Numericano", description = "Fast cooking conversions and ingredient density-based calculators." } = Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site ?? Astro.url.origin).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href={canonical} />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen">
    <Header />

    <main class="container-app py-6 sm:py-8">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white">
      <div class="container-app py-8 text-sm text-slate-600">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p>© {new Date().getFullYear()} Numericano</p>
            <p class="text-xs text-slate-500">Cooking conversions and density-based volume ↔ weight calculators.</p>
          </div>
          <div class="flex gap-4">
            <a href="/cooking/" class="no-underline">Cooking</a>
            <a href="/ingredients/browse/" class="no-underline">Ingredients</a>
            <a href="/guides/" class="no-underline">Guides</a>
            <a href="/charts/" class="no-underline">Charts</a>
            <a href="/about/" class="no-underline">About</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
