---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

const {
  title = "Numericano",
  description = "Practical cooking conversions with explicit assumptions.",
  noSidebar = false
} = Astro.props;

const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-slate-900">
    <a href="#content" class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-xl focus:border focus:border-slate-300 focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:shadow-lg">Skip to content</a>

    <Header />

    <main id="content" class="mx-auto w-full max-w-6xl px-4 py-8">
      <div class="grid grid-cols-1 gap-6 lg:grid-cols-[1fr_320px]">
        <section class="prose prose-slate max-w-none">
          <slot />
        </section>
        {!noSidebar && (
          <div>
            <Sidebar />
          </div>
        )}
      </div>
    </main>

    <footer class="border-t border-slate-200">
      <div class="mx-auto max-w-6xl px-4 py-6 text-sm text-slate-600">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <span>Numericano prioritizes clarity: each conversion is tied to an explicit assumption (density, packing, temperature).</span>
          <span>Â© {year} Numericano</span>
        </div>
      </div>
    </footer>
  </body>
</html>
