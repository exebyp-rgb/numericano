---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { ingredients } from "@/lib/data";

const title = "Browse all ingredients";
const description = "Complete list of all cooking ingredients with density data and conversion tools.";
---

<BaseLayout title={title} description={description}>
  <section class="mb-6 sm:mb-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight">Browse all ingredients</h1>
    <p class="mt-2 text-lg text-slate-700">Select an ingredient to view density data or cooking conversions.</p>
  </section>

  <section class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {ingredients.map((ing) => (
      <article class="card card-pad">
        <h2 class="text-base font-semibold text-slate-900">{ing.name}</h2>
        <p class="mt-1 text-sm text-slate-600">Density ranges and conversion tools.</p>
        <div class="mt-3 flex flex-wrap gap-2">
          <a class="btn-primary no-underline" href={`/ingredients/${ing.slug}/`}>View density</a>
          <a class="btn-ghost no-underline" href={`/cooking/${ing.slug}/`}>Conversions</a>
        </div>
      </article>
    ))}
  </section>
</BaseLayout>
