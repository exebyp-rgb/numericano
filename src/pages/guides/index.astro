---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { guideSlugs } from "@/lib/site-data";

const title = "Cooking guides";
const description = "Practical measurement and conversion guides for more consistent results.";

const toTitle = (slug: string) =>
  slug
    .split("-")
    .map((part) => part.charAt(0).toUpperCase() + part.slice(1))
    .join(" ");

const guides = guideSlugs.map((slug) => ({
  slug,
  title: toTitle(slug),
}));
---

<BaseLayout title={title} description={description}>
  <section class="card card-pad">
    <p class="text-sm uppercase tracking-wider text-slate-500">Guides</p>
    <h1 class="text-2xl font-bold text-slate-900">Cooking guides</h1>
    <p class="text-slate-600 mt-2">Learn how to measure ingredients accurately and convert between units.</p>
  </section>

  <section class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 mt-6">
    {guides.map((guide) => (
      <article class="card hover:shadow-md transition">
        <div class="card-pad">
          <h2 class="text-lg font-semibold text-slate-900">
            <a href={`/guides/${guide.slug}/`}>{guide.title}</a>
          </h2>
          <p class="text-sm text-slate-600 mt-2">Practical tips for better consistency in the kitchen.</p>
          <div class="mt-3">
            <a class="btn" href={`/guides/${guide.slug}/`}>Read guide</a>
          </div>
        </div>
      </article>
    ))}
  </section>
</BaseLayout>
